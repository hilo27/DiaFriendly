<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="top|center"
    android:layout_width="260dp"
    android:layout_height="115dp">

    <Button
        android:layout_width="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/red"
        android:background="#ff8a80"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_column="2"
        android:gravity="center_vertical|center_horizontal|center" />

    <Button
        android:layout_width="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/none"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_column="0"
        android:gravity="center_vertical|center_horizontal|center" />

    <Button
        android:layout_width="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/orange"
        android:background="#b1ff7f00"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_column="3"
        android:gravity="center_vertical|center_horizontal|center" />

    <Button
        android:layout_width="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/pink"
        android:background="#ffd180"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_column="4"
        android:gravity="center_vertical|center_horizontal|center" />

    <Button
        android:layout_width="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_yellow"
        android:background="#ffff8d"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_column="1"

        android:gravity="center_vertical|center_horizontal|center" />

    <Button
        android:layout_width="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/salat"
        android:background="#ccff90"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_column="4"
        android:gravity="center_vertical|center_horizontal|center" />

    <Button
        android:layout_width="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/azure"
        android:background="#a2007fff"
        android:layout_height="40dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_row="1"
        android:layout_column="0" />

    <Button
        android:layout_width="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/magenta"
        android:background="#c1ff00ff"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_column="1"
        android:gravity="center_vertical|center_horizontal|center" />

    <Button
        android:layout_width="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/blue"
        android:background="#80d8ff"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_column="2"
        android:gravity="center_vertical|center_horizontal|center" />

    <Button
        android:layout_width="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/dark_green"
        android:background="#a9139429"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_column="3"
        android:gravity="center_vertical|center_horizontal|center" />

</GridLayout>